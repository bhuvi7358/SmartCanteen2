<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: 12345"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_customer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer ID: C001"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Name: Idly"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Processing"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/button_complete_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete Order"/>
</LinearLayout>
